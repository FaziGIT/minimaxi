{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md p-8 space-y-6">
            <h1 class="text-2xl font-bold text-center">Ajouter votre adresse !</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            <div class="space-y-1">
                {{ form_label(form.address, 'Votre adresse *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.address, {
                    'attr': {
                        'class': 'mt-1 block w-full border ' ~
                        (form_errors(form.address) ? 'border-red-500' : 'border-gray-300') ~
                        ' rounded-xl shadow-sm p-2 focus:ring-green-500 focus:border-green-500'
                    }
                }) }}
                {% if form_errors(form.address) %}
                    <div class="text-red-500 text-xs italic">
                        {{ form_errors(form.address) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit"
                    class="w-full bg-green-600 text-white font-medium py-2 rounded-md shadow-sm hover:bg-green-700">
                Sauvegarder
            </button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
