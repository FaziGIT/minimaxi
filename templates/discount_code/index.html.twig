{% extends 'base.html.twig' %}

{% block title %}DiscountCode index{% endblock %}

{% block body %}
    <h1>DiscountCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Percentage</th>
                <th>ValidUntil</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discount_code in discount_codes %}
            <tr>
                <td>{{ discount_code.id }}</td>
                <td>{{ discount_code.code }}</td>
                <td>{{ discount_code.percentage }}</td>
                <td>{{ discount_code.validUntil ? discount_code.validUntil|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_discount_code_show', {'id': discount_code.id}) }}">show</a>
                    <a href="{{ path('app_discount_code_edit', {'id': discount_code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_discount_code_new') }}">Create new</a>
{% endblock %}
