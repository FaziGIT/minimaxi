{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container mx-auto my-10 px-10">
        <h1 class="text-3xl font-bold mb-6 mt-6 py-12 text-center">Mon espace administrateur</h1>

        <!-- Carte Informations Personnelles -->
        <div class="bg-white shadow-md border p-4 rounded-lg mb-6 flex justify-between items-center">
            <!-- Avatar -->
            <div class="flex items-center space-x-4">
                <div class="w-24 h-24">
                    {% if app.user.avatar %}
                        <img src="{{ asset(app.user.avatar) }}" alt="Avatar de {{ app.user.email }}" class="w-full h-full object-cover rounded-full">
                    {% endif %}
                </div>
                <div>
                    <p class="px-10"><strong>Email :</strong> {{ app.user.email }}</p>
                </div>
            </div>
        </div>

        <p class="text-center text-gray-600 mb-8">Accédez rapidement aux différentes sections d'administration.</p>

        <div class="flex flex-row justify-around">
            <a href="{{ path('app_discount_code_index') }}" class="text-white bg-black px-4 py-2 rounded-md hover:bg-gray-700 w-fit">
                <span class="font-semibold">Voir les codes de réduction</span>
            </a>
            <a href="{{ path('app_admin_product') }}" class="text-white bg-black px-4 py-2 rounded-md hover:bg-gray-700 w-fit">
                <span class="font-semibold">Voir les produits</span>
            </a>
            <a href="#" class="text-white bg-black px-4 py-2 rounded-md hover:bg-gray-700 w-fit">
                <span class="font-semibold">Voir les utilisateurs</span>
            </a>
        </div>

    </div>
{% endblock %}
