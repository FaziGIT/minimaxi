{% extends 'base.html.twig' %}

{% block title %}Admin - Affichage des commentaires de {{ client.email }}{% endblock %}

{% block body %}
    <div class="mx-32">
        <div class="flex justify-start mb-6 mx-7">
            <a href="{{ path('app_admin_show_users') }}"
               class="inline-block mt-4 px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-700">
                Retour
            </a>
        </div>
        {% for review in reviews %}
            <div class="border rounded-md p-3 ml-3 my-3">
                <div class="flex gap-3 items-center">

                    <img src="{{ asset('img/avatar/') ~ review.client.avatar }}"
                         class="object-cover w-8 h-8 rounded-full
                            border-2 border-emerald-400  shadow-emerald-400
                            " alt="users avatar">

                    <h3 class="font-bold">
                        {{ review.client.email }}
                    </h3>
                </div>

                <p class="text-gray-600 mt-2">
                    {{ review.content }}
                </p>

            </div>
        {% endfor %}

    </div>

{% endblock %}


