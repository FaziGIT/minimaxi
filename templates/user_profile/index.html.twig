{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto my-10 p-6 bg-gray-50 shadow-lg rounded-lg">
        <h1 class="text-3xl font-bold mb-6 text-center">Mon Profil</h1>

        <!-- Carte Informations Personnelles -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Informations Personnelles</h2>
            <div class="mb-4">
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Adresse :</strong> {{ user.address ? user.address : 'Non renseignée' }}</p>
                <p><strong>Téléphone :</strong> {{ user.phoneNumber ? user.phoneNumber : 'Non renseigné' }}</p>
                <p><strong>Points de fidélité :</strong> {{ user.discountPoint }}</p>
            </div>
            <div class="text-right">
                <a href="#" class="text-white bg-blue-500 px-4 py-2 rounded-md hover:bg-blue-600">Modifier</a>
            </div>
        </div>

        <!-- Carte Codes Promo Actifs -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Mes Codes Promo Actifs</h2>
            {% if discountCodes|length > 0 %}
                <ul>
                    {% for discount in discountCodes %}
                        <li class="border p-4 rounded-lg mb-4 flex justify-between items-center">
                            <div>
                                <p><strong>Code :</strong> {{ discount.code }}</p>
                                <p><strong>Réduction :</strong> -{{ discount.percentage }}%</p>
                                <p><strong>Valable jusqu'au :</strong> {{ discount.validUntil|date("d/m/Y") }}</p>
                            </div>
                            <a onclick="navigator.clipboard.writeText('{{ discount.code }}')">
                                <svg class="h-6 w-6 text-gray-600 cursor-pointer" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M19.53 8L14 2.47C13.8595 2.32931 13.6688 2.25018 13.47 2.25H11C10.2707 2.25 9.57118 2.53973 9.05546 3.05546C8.53973 3.57118 8.25 4.27065 8.25 5V6.25H7C6.27065 6.25 5.57118 6.53973 5.05546 7.05546C4.53973 7.57118 4.25 8.27065 4.25 9V19C4.25 19.7293 4.53973 20.4288 5.05546 20.9445C5.57118 21.4603 6.27065 21.75 7 21.75H14C14.7293 21.75 15.4288 21.4603 15.9445 20.9445C16.4603 20.4288 16.75 19.7293 16.75 19V17.75H17C17.7293 17.75 18.4288 17.4603 18.9445 16.9445C19.4603 16.4288 19.75 15.7293 19.75 15V8.5C19.7421 8.3116 19.6636 8.13309 19.53 8ZM14.25 4.81L17.19 7.75H14.25V4.81ZM15.25 19C15.25 19.3315 15.1183 19.6495 14.8839 19.8839C14.6495 20.1183 14.3315 20.25 14 20.25H7C6.66848 20.25 6.35054 20.1183 6.11612 19.8839C5.8817 19.6495 5.75 19.3315 5.75 19V9C5.75 8.66848 5.8817 8.35054 6.11612 8.11612C6.35054 7.8817 6.66848 7.75 7 7.75H8.25V15C8.25 15.7293 8.53973 16.4288 9.05546 16.9445C9.57118 17.4603 10.2707 17.75 11 17.75H15.25V19ZM17 16.25H11C10.6685 16.25 10.3505 16.1183 10.1161 15.8839C9.8817 15.6495 9.75 15.3315 9.75 15V5C9.75 4.66848 9.8817 4.35054 10.1161 4.11612C10.3505 3.8817 10.6685 3.75 11 3.75H12.75V8.5C12.7526 8.69811 12.8324 8.88737 12.9725 9.02747C13.1126 9.16756 13.3019 9.24741 13.5 9.25H18.25V15C18.25 15.3315 18.1183 15.6495 17.8839 15.8839C17.6495 16.1183 17.3315 16.25 17 16.25Z" fill="#000000"></path> </g></svg>
                            </a>

                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500">Aucun code promo actif.</p>
            {% endif %}
        </div>

        <!-- Carte Commandes en Cours -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <h2 class="text-xl font-semibold mb-4">Commandes en Cours</h2>
            {% if currentOrders|length > 0 %}
                <ul>
                    {% for order in currentOrders %}
                        <li class="border p-4 rounded-lg mb-4">
                            <p><strong>Date :</strong> {{ order.createdAt|date("d/m/Y") }}</p>
                            <p><strong>Montant total :</strong> {{ order.totalPrice }} €</p>
                            <p><strong>Statut :</strong> {{ order.status.name }}</p>
                            <p><strong>Articles :</strong></p>
                            <ul class="ml-4">
                                {% for item in order.orderItems %}
                                    <li>- {{ item.product.name }} ({{ item.quantity }})</li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500">Aucune commande en cours.</p>
            {% endif %}
        </div>

        <!-- Carte Dernières Commandes Passées -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Mes Dernières Commandes Passées</h2>
            {% if deliveredOrders|length > 0 %}
                <ul>
                    {% for order in deliveredOrders %}
                        <li class="border p-4 rounded-lg mb-4">
                            <p><strong>Date :</strong> {{ order.createdAt|date("d/m/Y") }}</p>
                            <p><strong>Montant total :</strong> {{ order.totalPrice }} €</p>
                            <p><strong>Articles :</strong></p>
                            <ul class="ml-4">
                                {% for item in order.orderItems %}
                                    <li>- {{ item.product.name }} ({{ item.quantity }})</li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500">Aucune commande passée.</p>
            {% endif %}
        </div>

    </div>
{% endblock %}
