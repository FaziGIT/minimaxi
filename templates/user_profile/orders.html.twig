{% extends 'base.html.twig' %}

{% block title %}Mes Commandes{% endblock %}

{% block body %}
    <div class="container mx-auto my-10 px-10">
        <h1 class="text-3xl font-bold mb-6 mt-6 py-12 text-center">
            {{ type == 'current' ? 'Commandes en Cours' : 'Historique des Commandes' }}
        </h1>

        {% if orders|length > 0 %}
            <ul>
                {% for order in orders %}
                    <li class="border bg-white shadow-md p-4 rounded-lg mb-4">
                        <p><strong>Date :</strong> {{ order.createdAt|date("d/m/Y") }}</p>
                        <p><strong>Montant total :</strong> {{ order.totalPrice }} €</p>
                        <p><strong>Statut :</strong> {{ order.status.name }}</p>
                        <p><strong>Articles :</strong></p>
                        <ul class="ml-4">
                            {% for item in order.orderItems %}
                                <li>- {{ item.product.name }} ({{ item.quantity }})</li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-500 text-center">Aucune commande trouvée.</p>
        {% endif %}
    </div>
{% endblock %}
