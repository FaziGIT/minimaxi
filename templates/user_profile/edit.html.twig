{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container mx-auto my-10 px-10">
        <h1 class="text-3xl font-bold mb-6 mt-6 py-12 text-center">Modifier mon profil</h1>

        <div class="bg-white p-6 rounded-lg shadow-md mx-auto w-fit max-w-lg">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="p-4 mb-4 rounded {{ label == 'success' ? 'text-green-800 bg-green-50' : 'text-red-800 bg-red-50' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.address, 'Adresse', { 'label_attr': { 'class': 'font-semibold' } }) }}
                    {{ form_widget(form.address, { 'attr': { 'class': 'w-full p-2 border rounded' } }) }}
                    {{ form_errors(form.address) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.phoneNumber, 'Numéro de téléphone', { 'label_attr': { 'class': 'font-semibold' } }) }}
                    {{ form_widget(form.phoneNumber, { 'attr': { 'class': 'w-full p-2 border rounded' } }) }}
                    {{ form_errors(form.phoneNumber) }}
                </div>

                <div class="text-center flex flex-col items-center space-y-4">
                    <button type="submit" class="bg-black text-white px-6 py-2 rounded hover:bg-gray-700">
                        Enregistrer
                    </button>
                    <a href="{{ path('app_user_profile') }}" class="bg-white text-black px-6 py-2 rounded hover:bg-gray-100">
                        Retour
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
