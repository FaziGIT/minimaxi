{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md p-8 space-y-6">
            <h1 class="text-2xl font-bold text-center">Réinitialiser le mot de passe</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(requestForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(requestForm.email, 'Adresse email *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(requestForm.email, {
                    'attr': {
                        'class': 'mt-1 block w-full border border-gray-300 rounded-xl shadow-sm p-2 focus:ring-green-500 focus:border-green-500'
                    }
                }) }}
            </div>

            <div class="text-sm text-gray-600">
                <small>
                    Entrez votre adresse email, nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>

            <button type="submit"
                    class="w-full bg-green-600 text-white font-medium py-2 rounded-md shadow-sm hover:bg-green-700">
                Envoyer l'email de réinitialisation
            </button>
            {{ form_end(requestForm) }}

            <p class="text-sm text-center text-gray-600">
                <a href="{{ path('app_login') }}" class="text-green-500 underline">Retour à la connexion</a>
            </p>
        </div>
    </div>
{% endblock %}
