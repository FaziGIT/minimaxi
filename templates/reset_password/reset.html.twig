{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md p-8 space-y-6">
            <h1 class="text-2xl font-bold text-center">Réinitialiser le mot de passe</h1>

            {{ form_start(resetForm, {'attr': {'class': 'space-y-4'}}) }}
            <div class="space-y-1">
                {{ form_label(resetForm.plainPassword.first, 'Nouveau mot de passe *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'mt-1 block w-full border ' ~
                        (form_errors(resetForm.plainPassword.first) ? 'border-red-500' : 'border-gray-300') ~
                        ' rounded-xl shadow-sm p-2 focus:ring-green-500 focus:border-green-500'
                    }
                }) }}
                {% if form_errors(resetForm.plainPassword.first) %}
                    <div class="text-red-500 text-xs italic">
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>
                {% endif %}
                <p class="mt-1 text-sm text-gray-500">Le mot de passe doit contenir au moins 12 caractères.</p>
            </div>

            <div class="space-y-1">
                {{ form_label(resetForm.plainPassword.second, 'Confirmer le mot de passe *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'mt-1 block w-full border ' ~
                        (form_errors(resetForm.plainPassword.second) ? 'border-red-500' : 'border-gray-300') ~
                        ' rounded-xl shadow-sm p-2 focus:ring-green-500 focus:border-green-500'
                    }
                }) }}
                {% if form_errors(resetForm.plainPassword.second) %}
                    <div class="text-red-500 text-xs italic">
                        {{ form_errors(resetForm.plainPassword.second) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit"
                    class="w-full bg-green-600 text-white font-medium py-2 rounded-md shadow-sm hover:bg-green-700">
                Réinitialiser le mot de passe
            </button>
            {{ form_end(resetForm) }}

            <p class="text-sm text-center text-gray-600">
                <a href="{{ path('app_login') }}" class="text-green-500 underline">Retour à la connexion</a>
            </p>
        </div>
    </div>
{% endblock %}
